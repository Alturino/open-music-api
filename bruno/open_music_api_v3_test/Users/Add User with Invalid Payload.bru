meta {
  name: Add User with Invalid Payload
  type: http
  seq: 1
}

post {
  url: http://localhost:{{port}}/users
  body: json
  auth: none
}

body:json {
  {{currentBadUserPayload}}
}

script:pre-request {
  let badUserPayloads = bru.getEnvVar('badUserPayloads');
  
  if (!badUserPayloads | badUserPayloads.length === 0) {
      badUserPayloads = [
          {},
          { username: 1 },
          { username: 'dicoding' },
          { username: 'dicoding', password: true },
          { username: 'dicoding', passowrd: 'secret' },
          { username: 'dicoding', password: 'secret', fullname: 0 }
      ];
  }
  
  const currentBadUserPayload = badUserPayloads.shift();
  bru.setEnvVar('currentBadUserPayload', JSON.stringify(currentBadUserPayload));
  bru.setEnvVar('badUserPayloads', badUserPayloads);
}

